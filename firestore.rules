rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users: read/write own document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Courses: public read, restricted write
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
      match /lessons/{lessonId} {
        allow read: if true;
        allow write: if request.auth != null && isAdmin();
      }
    }

    // Enrollments: student can read/write own; admins full
    match /enrollments/{enrollmentId} {
      allow read: if request.auth != null &&
        (resource.data.studentId == request.auth.uid || isAdmin());
      allow write: if request.auth != null &&
        (request.resource.data.studentId == request.auth.uid || isAdmin());
    }

    // Assignments: authenticated read, admin write
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }

    // Submissions: students write own; mentors/admin read
    match /submissions/{submissionId} {
      allow read: if request.auth != null &&
        (resource.data.studentId == request.auth.uid || isMentor() || isAdmin());
      allow write: if request.auth != null &&
        (request.resource.data.studentId == request.auth.uid);
    }

    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isMentor() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'mentor';
    }
  }
}
